<?xml version="1.0" encoding="UTF-8"?>

<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Fortifications - Industrial</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- reassigning researches -->
                <!-- light weapons -->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="FT_Maxim4M"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>Snek_AmmoBelts</li>
                        </researchPrerequisites>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="FT_AutoCannon"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>CE_TurretHeavyWeapons</li>
                            <li>Snek_HighCaliber</li>
                            <li>Snek_AmmoBelts</li>
                        </researchPrerequisites>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="FT_TurretAutoCannon_Twin"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>CE_TurretHeavyWeapons</li>
                            <li>Snek_HighCaliber</li>
                            <li>Snek_AmmoBelts</li>
                        </researchPrerequisites>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="FT_RecoillessGun"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>CE_TurretHeavyWeapons</li>
                            <li>CE_Launchers</li>
                        </researchPrerequisites>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>