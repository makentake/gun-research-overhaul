<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!--=LMG=-->
  <!--ADVANCED NV LMGs-->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="HIDGun_REAPR" or
    defName="HIDGun_MTwoFifty_NGSW"]/recipeMaker/researchPrerequisites</xpath>
    <value>
      <researchPrerequisites>
        <li>PrecisionRifling</li>
        <li>Snek_Bakelite</li>
        <li>CE_AdvancedNV</li>
        <li>Snek_AmmoBelts</li>
      </researchPrerequisites>
    </value>
  </Operation>
  <!--SIMPLE NV LMGs-->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="HIDGun_LAMG" or
    defName="HIDGun_FNMinimi762MkThree"]/recipeMaker/researchPrerequisites</xpath>
    <value>
      <researchPrerequisites>
        <li>PrecisionRifling</li>
        <li>CE_SimpleNV</li>
        <li>Snek_Bakelite</li>
        <li>Snek_AmmoBelts</li>
      </researchPrerequisites>
    </value>
  </Operation>
  <!--XM8 LMG (A UNICORN)-->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="HIDGun_XM8_LMG"]/recipeMaker/researchPrerequisites</xpath>
    <value>
      <researchPrerequisites>
        <li>PrecisionRifling</li>
        <li>CE_SimpleNV</li>
        <li>Snek_Bakelite</li>
        <li>Snek_LMG</li>
      </researchPrerequisites>
    </value>
  </Operation>
</Patch>