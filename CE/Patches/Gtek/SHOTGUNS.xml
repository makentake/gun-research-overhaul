    <xpath>Defs/ThingDef[defName="HIDGun_BrowningBSS" or
    defName="HIDGun_IZh18Baikal"]/recipeMaker</xpath>
    <value>
      <researchPrerequisite Inherit="False">Snek_BreakAction</researchPrerequisite>
    </value>
  </Operation>
